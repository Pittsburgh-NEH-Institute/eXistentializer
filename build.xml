<?xml version="1.0" encoding="UTF-8"?>
<project default="all" name="init-test">
  <description>useful description</description>
  <xmlproperty file="expath-pkg.xml" />
  <property name="project.version" value="${package(version)}" />
  <property name="project.app" value="init-test" />
  <property name="build.dir" value="build" />
  <!-- Start it -->
  <target name="init" description="create build directory">
    <tstamp />
    <mkdir dir="${build.dir}" />
  </target>
  <!-- Release build -->
  <target name="deploy" depends="init" description="compile release build">
    <zip basedir="." destfile="${build.dir}/${project.app}-${project.version}.xar" excludes="**/${build.dir}/**, *.code-workspace, initializer.sh, properties.txt" />
  </target>
  <target name="all" depends="deploy">
    <tstamp />
  </target>
</project>
